{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/"],
      "filetypes": ["go"]
    },
    "groovy": {
      "command": "java",
      "args" : ["-jar", "/usr/local/bin/groovy-language-server-all.jar"],
      "filetypes": ["groovy", "gradle"]
     }
  }
}
